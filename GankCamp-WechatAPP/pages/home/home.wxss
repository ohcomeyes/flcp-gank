/**index.wxss**/
.container{
  background-color:#fff;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header{
  background: #222;
  background-repeat: no-repeat;
  background-position: center 0;
  background-size: cover;
  background-image: url("https://work.ppct.cn/images/xiaochengxu/top.jpg");
  padding: 250rpx 0 0;
  text-align: center;
  min-height: 500rpx;
  position: relative;
  box-sizing: border-box;
  margin-bottom: 30px;
  color: #fff;
  font-size: 2rem;
}
.logo{
	position: absolute;
  left: 1%;
  right: 1%;
  bottom: -28px;
}
.logo image{
	width: 50px;
	height: 50px;
  border-radius: 50%;
}
.influence{
  padding: 20rpx;
  display: flex;
  text-align: center;
  background-color: #fff;
}
.influence view{
  flex: 1;
}
.influence view text{
  display:block;
  font-size:24rpx;
}
.influence view text:last-child{
  margin-top:20rpx;
  font-size:28rpx;
  font-weight:bold;
}
.list{
	padding: 20rpx;
}
.item{
	text-align: center;
	background: #fff;
	margin-bottom: 20rpx;
  padding:20rpx;
  color: #666;
  font-size: 30rpx;
}

.item .thumb{
	height: 0;
  padding-bottom: 70%;
  overflow: hidden;
  cursor: pointer;
}
.item .thumb .image{
	display: block;
  background-repeat: no-repeat;
  background-position: left 0;
  background-size: 100%;
  width: 100%;
  height: 1000px;
  max-width: 100%;
  transform: translateZ(0);
  transition: all .25s linear;
}
.item-title{
	font-size:28rpx;
  font-weight:bold;
  line-height:40rpx;
  text-space:5rpx;
}
.item-desc{
  display: flex;
}
.item-desc icon{
  font-size:24rpx;
}
.item-desc .right{
  flex: 1
}
.item-desc .left{
  flex: 1
}