/**detail.wxss**/
.container{
  height: auto;
}
.flex-wrp{
  display:flex;
}
.flex-item{
  flex: 1;
  text-align: center;
}
.flex-item .wxtime{
  font-size: 30rpx;
  font-weight: bold;
  color: #EE4000;
}

.answer-feed {
    padding: 0;
    font-size: 14rpx;
    background: #F0F4F3;
    color: #000;
}
.question-wrp{
    border-radius: 3px;
    box-shadow: 0 1px 2px #bebebe;
}
.question-item{
    width: 710rpx;
    padding: 0rpx 20rpx 10rpx;
    background: #fff;
}
.question-item .que-title{
    padding: 30rpx 20rpx 0;
    font-size: 32rpx;
}
.que-title .type{
    color:red;
    font-size: 32rpx;
}
.que-title .money{
  color: red;
  font-weight: bold;
}
.question-item .que-content{
    padding: 0 20rpx;
    font-size: 26rpx;
}
.question-item .que-follow{
    margin: 20rpx;
    height: 46rpx;
}
.question-item .que-follow view{
    display: inline-block;
    margin: 0 40rpx 0 0;
}

.question-item .que-follow image{
    width: 50rpx;
    height: 50rpx;
    margin: 0 10rpx 0 0;
    vertical-align: middle;
}
.question-item .que-follow .left{
    float: left;
    padding: 10rpx 0;
}
.question-item .que-follow .left text{
    color: #AFAFAF;
    height: 50rpx;
    vertical-align: middle;
    padding: 18rpx 0;
    font-size: 24rpx;
}
.question-item .que-follow .right{
    float: right;
    padding: 20rpx 55rpx;
    color: #ffffff;
    background: #52C980;
    border-radius: 3px;
    font-size: 26rpx;
    margin: 0;
}
.que-operate{
    width: 750rpx;
    color: #889091;
    vertical-align: middle;
    background: #ffffff;
    padding-top: 10rpx;
}
.que-operate .flex-item{
    padding: 10rpx 0;
    /* font-size: 26rpx; */
}

.flex-item icon{
    color: #1AAD19;
    font-size: 40rpx;
}
.flex-item text{
  font-size: 26rpx; 
}

.que-operate image{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    margin: 0 20rpx 0 0;
}

.answerer-wrp{
    position: relative;
    width: 750rpx;
    height: 150rpx;
    background: #fff;
}
.answerer-wrp .bg-half{
    position: absolute;
    top: 0;
    width: 750rpx;
    height: 75rpx;
}
.answerer {
    position: relative;
    margin: 0 auto;
    width: 630rpx;
    height: 80rpx;
    padding: 30rpx;
    background: #fff;
     border: solid 1px #ebebeb; 
    border-radius: 3px;
     box-shadow: 0 1px 2px #bebebe; 
}
.answerer .avatar {
    flex: 1;
    width: 90rpx;
    height: 90rpx;
}

.answerer .avatar image {
    display: inline-block;
    width: 80rpx;
    height: 80rpx;
    border-radius: 90rpx;
}
.answerer .answerer-info{
    flex: 5;
    text-align: left;
    padding: 10rpx 20rpx;
    line-height: 38rpx;
}
.answerer .answerer-info text{
    display: block;
}
.answerer .answerer-info .answerer-name{
    font-size: 28rpx;
}
.answerer .answerer-info .answerer-des{
    font-size: 22rpx;
    color: #808080;
    line-height: 28rpx;
}
.answerer .follow{
    flex: 2;
    padding: 15rpx 0;
    font-size: 22rpx;
}
.answerer .follow text{
    display: inline-block;
    padding: 15rpx 20rpx;
    color: #40bcd0;
    border: solid 2px #40bcd0;
    border-radius: 6rpx;
}

.comment-title{
  color: #56abe4;
  font-size:36rpx;
  margin:5px;
}
.comment-title text{
  font-size: 28rpx;
}

.comment-item{
  box-sizing:border-box;
  width:100%;
  padding:15rpx 0rpx;
  border-bottom:1rpx solid #e3e3e3;
  float:left;
}
.comment-people{
  padding: 10rpx;
}
.comment-people image{
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}
.comment-people text{
  font-weight: bold;
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  font-size: 26rpx;
}

.comment-feed{
  width: 690rpx;
  padding: 20rpx 20rpx 20rpx;
  margin: -1rpx 0 6rpx 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 2px 2px 2px 5px #eeeeee;
}

.comment-footer{
  padding-bottom: 110rpx;
}

.comment-source{
  width:690rpx;
  left:0;
  height:50rpx;
  border-bottom: 1px dashed #ddd;
}

.comment-source text{
  font-size: 26rpx;
  font-weight: bold;
}

.comment-content{
  width:690rpx;
  left:0;
}
.comment-time{
  float: right;
  font-size: 26rpx;
  color:#a0acac;
}

.comment-body view{
  padding: 10rpx;
}

.comment-body .center{
  text-align:center;
}

.comment-body .center image{
  width: 100%;
}

.comment-body text{
  font-size: 26rpx;
  line-height: 40rpx;
  color: #4D4D4D;
}

.detail-footer-barrage{
    position: fixed;
    top:80%;
    left:30rpx;
    width: 670rpx;
}

.detail-footer{
    position: fixed;
    bottom: 0;
    width: 670rpx;
    padding: 20rpx 40rpx;
    background: #ffffff;
}

