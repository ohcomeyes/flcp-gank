page {
  height:100%
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #EBEBEB;
}

.load-more-container {
  display: flex;
  flex-direction: row;
  width: 100%; 
  height: 100rpx;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.load-more-tips {
  font-size: 30rpx;
  color: #999999;
  margin-left: 10rpx
}

.driver {
  height: 3rpx;
  widows: 100%;
  background-color: #cccccc;
}

.container .feed-item{
  width: 690rpx;
  padding: 20rpx 30rpx 20rpx;
  margin: 0 0 6rpx 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 2px 2px 2px 5px #eeeeee;
}
.container .feed-item .feed-source{
  width: 690rpx;
  left: 0;
  height: 50rpx;
}
.container .feed-item .feed-source .avatar{
  position: relative;
  display: inline-block;
}
.container .feed-item .feed-source a{
  display: inline-block;
  height: 40rpx;
}
.container .feed-item .feed-source .avatar image{
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}

.container .feed-item .feed-source .member{
  position: relative;
  display: inline-block;
}
.container .feed-item .feed-source .member image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding-left: 10rpx;
  top: 10rpx;
  vertical-align: middle;
}
.container .feed-item .feed-source text{
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #a0acac;
  font-size: 26rpx;
}
.container .feed-item .feed-source .money{
  display: inline-block;
  color: red;
  font-weight: bold;
  float: right;
}
.container .feed-item .feed-source .time{
  display: inline-block;
  float: right;
}
.container .feed-item .feed-content{
  padding: 10rpx 0 0 0;
}
.container .feed-item .feed-content .question text{
  font-size: 28rpx;
  font-weight: bold;
  line-height: 40rpx;
  text-space: 5rpx;
  color: #0366d6;
}
.container .feed-item .feed-content .answer-body{
  padding: 10rpx 0 0 0;
  /*height: 10rpx;*/
  font-size: 26rpx;
  line-height: 40rpx;
  color: #5b5b5b;
}
.container .feed-item .feed-content .answer-actions{
  width: 690rpx;
  padding: 10rpx 0  0;
  color: #a0acac;
}
.container .feed-item .feed-content .answer-actions view{
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
}